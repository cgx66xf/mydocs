after saving our .ui file in our folder
from PyQt6.QtWidgets import QApplication, QWidget
from PyQt6 import uic
import sys

from gui import window

class Ui(QWidget):
    def __init__(self):
        super().__init__()
        uic.load_ui("untitled.ui", self)


app= QApplication(sys.argv)
window= Ui()
window.show()
sys.exit(app.exec())
