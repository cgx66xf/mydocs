from PyQt6.QtGui import QIcon
import sys

class Window(QWidget):
    def __init__(self):
        super().__init__()
        self.setWindowTitle("Hello window")
        self.setWindowIcon(QIcon("qt.png"))
        """
        #self.setFixedHeight(200)
